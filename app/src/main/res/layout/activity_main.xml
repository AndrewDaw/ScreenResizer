<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/lay"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity">










<Button
    android:id="@+id/bGetRoot"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="92dp"
    android:onClick="bGetRoot"
    android:text="Give me root access\n ;)"
    app:layout_constraintBottom_toBottomOf="@id/tvNoRoot"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.565" />

<ImageView
    android:id="@+id/ivRestricted"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    app:srcCompat="@android:color/holo_red_dark" />

<TextView
    android:id="@+id/tvNoRoot"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="200dp"
    android:text="THIS APP REQUIRES ROOT"
    android:textAppearance="@color/colorPrimary"
    android:textSize="50px"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:layout_editor_absoluteY="295dp" />




</android.support.constraint.ConstraintLayout>