<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.champ.andrewdaw.screenresizer">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ico"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ico"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.andrewdaw.screenresizer.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.andrewdaw.screenresizer.ChangeRes"
            android:label="@string/title_activity_change_res"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.andrewdaw.screenresizer.DrawResize"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_draw_resize"
            android:theme="@style/FullscreenTheme"></activity>
    </application>

</manifest>